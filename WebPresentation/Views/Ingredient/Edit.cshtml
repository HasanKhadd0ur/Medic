@model ApplicationCore.Entities.Ingredient;

@{
    ViewData["Title"] = "Edit";
    Layout = "_AdminLayout";

}
<div style="padding:120px ;">

    <h1>Edit</h1>

    <h4>Project</h4>
    <hr />
    <div class="row p-120">
        <div class="col-md-4">
            <form asp-action="Edit" class="form-group ">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
